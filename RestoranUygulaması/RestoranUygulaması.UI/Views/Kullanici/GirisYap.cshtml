@model RestoranUygulaması.UI.Models.GirisYapViewModel

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <form asp-controller="Kullanici" asp-action="GirisYap" method="post" class="mt-3">

            <h1 class="mt-3">Login</h1>

            <!-- <div asp-validation-summary="All" class="text-danger"></div> -->

            <div class="mt-3">
                <label asp-for="Ad" class="form-label">Ad</label>
                <input asp-for="Ad" type="text" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Sifre" class="form-label">Sifre</label>
                <input asp-for="Sifre" type="password" class="form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

        </form>

        <div class="mt-3">
            <a asp-controller="Front" asp-action="Register">Did you not register yet?</a>
        </div>

    </div>
    <div class="col-md-4"></div>
</div>